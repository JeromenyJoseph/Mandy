<h1>Delete Account</h1>
<p>Warning! You are about to delete your account. This cannot be undone.</p>

<h3> confirm your passowrd below</h3>
<%= form_for current_user, method: :delete do |f| %>
	<div>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>
	<div>
		<%= f.submit "Close my account. :(" %>
	</div>
	
<% end %>