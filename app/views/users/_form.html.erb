<%= form_for @user, :html => { :multipart => true } do |f|%>
	
	<% if @user.errors.any? %>
		<% @user.errors.full_messages.each do |error| %>
			<p><%= error %></p>
		<% end %>
	<% end %>

	<div>	
		<%= f.label :username %>
		<%= f.text_field :username %>
	</div>

	<div>	
		<%= f.label :fname, "First Name" %>
		<%= f.text_field :fname %>
	</div>

	<div>	
		<%= f.label :lname, "Last Name" %>
		<%= f.text_field :lname %>
	</div>

	<div>	
		<%= f.label :email%>
		<%= f.email_field :email %>
	</div>

	<div>
		<%= f.label :'Image' %>
		<%= f.file_field :image%>
	</div>

	<%  unless current_user %>

		<%= render partial: 'password', locals: {f: f} %>

	<% end %>
	
	<div>
		<%= f.submit %>
	</div>
<% end %>

